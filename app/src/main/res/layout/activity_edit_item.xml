<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditItemActivity">

<Button
    android:id="@+id/scanButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Scan ItemID"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="@dimen/_8sdp"
    />

    <LinearLayout
        android:id="@+id/itemIDLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scanButton"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Item ID:  "
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ITEM ID TEXT"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeinLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemIDLL"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Time In:  "
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Time in text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelfLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timeinLL"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Shelf:  "
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="1"
            android:text="ITEM ID TEXT"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeoutLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shelfLL"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Time Out:  "
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Timeout text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timeoutLL"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Status:  "
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="1"
            android:text="ITEM ID TEXT"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/statusLL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="SUBMIT"
        />



</androidx.constraintlayout.widget.ConstraintLayout>